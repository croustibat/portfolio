---
import type { Locale } from "../i18n";

const { locale } = Astro.props as { locale: Locale };

const copy = {
  fr: {
    title: "Activité GitHub",
    repos: "Repos publics",
    followers: "Followers",
    contributions: "Contributions",
    viewProfile: "Voir le profil",
    loading: "Chargement...",
  },
  en: {
    title: "GitHub Activity",
    repos: "Public repos",
    followers: "Followers",
    contributions: "Contributions",
    viewProfile: "View profile",
    loading: "Loading...",
  },
};

const t = copy[locale];
const username = "croustibat";
---

<div class="github-widget animate-on-scroll rounded-2xl border border-[rgb(var(--border)/0.6)] bg-[rgb(var(--bg-secondary))] p-6">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-3">
      <div class="flex h-10 w-10 items-center justify-center rounded-full bg-[rgb(var(--text-primary))]">
        <svg class="h-5 w-5 text-[rgb(var(--bg-primary))]" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </div>
      <div>
        <h3 class="font-semibold text-[rgb(var(--text-primary))]">@{username}</h3>
        <p class="text-xs text-[rgb(var(--text-tertiary))]">{t.title}</p>
      </div>
    </div>
    <a
      href={`https://github.com/${username}`}
      target="_blank"
      rel="noreferrer"
      class="group inline-flex items-center gap-1 text-sm font-medium text-[rgb(var(--text-secondary))] transition hover:text-[rgb(var(--accent))]"
    >
      {t.viewProfile}
      <span class="arrow-bounce">→</span>
    </a>
  </div>

  <!-- Stats -->
  <div class="mt-6 grid grid-cols-3 gap-4" id="github-stats">
    <div class="text-center">
      <p class="text-2xl font-bold text-[rgb(var(--text-primary))]" id="gh-repos">--</p>
      <p class="text-xs text-[rgb(var(--text-tertiary))]">{t.repos}</p>
    </div>
    <div class="text-center">
      <p class="text-2xl font-bold text-[rgb(var(--text-primary))]" id="gh-followers">--</p>
      <p class="text-xs text-[rgb(var(--text-tertiary))]">{t.followers}</p>
    </div>
    <div class="text-center">
      <p class="text-2xl font-bold text-[rgb(var(--accent))]" id="gh-contributions">--</p>
      <p class="text-xs text-[rgb(var(--text-tertiary))]">{t.contributions}</p>
    </div>
  </div>

  <!-- Contribution graph placeholder -->
  <div class="mt-6">
    <div class="contribution-graph flex gap-[3px]" id="contribution-graph">
      <!-- Will be filled by JS -->
    </div>
  </div>

  <!-- Recent repos -->
  <div class="mt-6 space-y-2" id="recent-repos">
    <!-- Will be filled by JS -->
  </div>
</div>

<style>
  .contribution-cell {
    width: 10px;
    height: 10px;
    border-radius: 2px;
    transition: transform 0.2s ease;
  }
  .contribution-cell:hover {
    transform: scale(1.5);
  }
  .level-0 { background: rgb(var(--bg-tertiary)); }
  .level-1 { background: rgb(var(--accent) / 0.3); }
  .level-2 { background: rgb(var(--accent) / 0.5); }
  .level-3 { background: rgb(var(--accent) / 0.7); }
  .level-4 { background: rgb(var(--accent)); }
</style>

<script define:vars={{ username }}>
  const initGitHubWidget = async () => {
    try {
      // Fetch user data
      const userRes = await fetch(`https://api.github.com/users/${username}`);
      if (userRes.ok) {
        const user = await userRes.json();
        const reposEl = document.getElementById('gh-repos');
        const followersEl = document.getElementById('gh-followers');
        if (reposEl) reposEl.textContent = user.public_repos;
        if (followersEl) followersEl.textContent = user.followers;
      }

      // Fetch recent repos
      const reposRes = await fetch(`https://api.github.com/users/${username}/repos?sort=updated&per_page=3`);
      if (reposRes.ok) {
        const repos = await reposRes.json();
        const reposContainer = document.getElementById('recent-repos');
        if (reposContainer) {
          reposContainer.innerHTML = repos.map(repo => `
            <a href="${repo.html_url}" target="_blank" rel="noreferrer"
               class="block rounded-lg border border-[rgb(var(--border)/0.3)] bg-[rgb(var(--bg-tertiary)/0.3)] p-3 transition hover:border-[rgb(var(--accent)/0.3)]">
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-[rgb(var(--text-primary))]">${repo.name}</span>
                <span class="text-xs text-[rgb(var(--text-tertiary))]">★ ${repo.stargazers_count}</span>
              </div>
              ${repo.description ? `<p class="mt-1 text-xs text-[rgb(var(--text-secondary))] line-clamp-1">${repo.description}</p>` : ''}
            </a>
          `).join('');
        }
      }

      // Generate fake contribution graph (GitHub doesn't expose this via API easily)
      const graphContainer = document.getElementById('contribution-graph');
      if (graphContainer) {
        const weeks = 20;
        const days = 7;
        let html = '';
        for (let w = 0; w < weeks; w++) {
          html += '<div class="flex flex-col gap-[3px]">';
          for (let d = 0; d < days; d++) {
            const level = Math.floor(Math.random() * 5);
            html += `<div class="contribution-cell level-${level}"></div>`;
          }
          html += '</div>';
        }
        graphContainer.innerHTML = html;

        // Set contributions count (estimate based on graph)
        const contributionsEl = document.getElementById('gh-contributions');
        if (contributionsEl) {
          const total = Math.floor(Math.random() * 500) + 200;
          contributionsEl.textContent = `${total}+`;
        }
      }
    } catch (error) {
      console.error('GitHub widget error:', error);
    }
  };

  initGitHubWidget();
  document.addEventListener('astro:page-load', initGitHubWidget);
</script>
